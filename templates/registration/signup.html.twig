{% extends "base.html.twig" %}
{% block title %}Registration{% endblock %}

{% block body %}

    


    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.nom}} {{ app.user.prenom }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
    {% else %}
    {{ form_start(form, {attr:{novalidate:'novalidate'}}) }}
        <h1>Sign Up </h2>
            <h1 class="h3 mb-3 font-weight-normal">Welcome</h1>
            
            <div class="col-12">
                <label for="inputPassword">Nom</label>
                {{ form_widget(form.nom,{'attr':{'class':'form_control'}}) }}
             </div>
        
             <div class="col-12">
                <label for="inputPassword">Prenom</label>
                {{ form_widget(form.prenom,{'attr':{'class':'form_control', 'type':'password'}}) }}
             </div>

            <div class="col-12">
                <label for="inputEmail">Email</label>
                {{ form_widget(form.email,{'attr':{'class':'form_control'}}) }}
            </div>
        
            <div class="col-12">
               <label for="inputPassword">Password</label>
               {{ form_widget(form.password.first,{'attr':{'class':'form_control'}}) }}
            </div>
        
            <div class="col-12">
               <label for="inputPassword">Confirm Password</label>
               {{ form_widget(form.password.second,{'attr':{'class':'form_control'}}) }}
            </div>
        
            <button class="btn btn-lg btn-primary" type="submit">
                Sign Up
            </button><br>
        
            Already have an account? <a href="{{ path('login') }}">Log in</a>.
            {{ form_end(form) }}
    {% endif %}

{% endblock %}
